<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reader_news_multi_header"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/code_num"
                android:layout_width="wrap_content"
                android:layout_height="25dip"
                android:background="@drawable/code_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="99" />

            <TextView
                android:id="@+id/reBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="TextView" />
        </LinearLayout>

        <View
            android:layout_width="20.0dip"
            android:layout_height="10.0dip"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reader_news_multi_bottom"
        android:gravity="center"
        android:orientation="vertical" >

        <View
            android:layout_width="20.0dip"
            android:layout_height="10.0dip"
            android:background="@null" />

        <TextView
            android:id="@+id/BarcodeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>