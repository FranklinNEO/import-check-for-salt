<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reader_news_multi_header"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="地址："
            android:textAppearance="@style/SingleTableColumnText"
            android:textColor="@color/lightgrey" />

        <TextView
            android:id="@+id/mpAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:lineSpacingExtra="3.0dip"
            android:text="北京市朝阳区红军营南路天畅园7号楼2203室"
            android:textAppearance="@style/SingleTableContentText" />
    </LinearLayout>

</LinearLayout>